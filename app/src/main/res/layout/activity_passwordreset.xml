<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/homesix"
    tools:context=".passwordresetActivity">

    <TextView
        android:id="@+id/TvEmailpwsreset"
        android:layout_width="220dp"
        android:layout_height="0dp"
        android:layout_marginTop="252dp"
        android:layout_marginBottom="46dp"
        android:text="Enter your Email"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/btnreset"
        app:layout_constraintStart_toStartOf="@+id/btnreset"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnreset"
        android:layout_width="193dp"
        android:layout_height="0dp"
        android:layout_marginBottom="292dp"
        android:text="RESET"
        android:textSize="20dp"
        app:backgroundTint="#03A9F4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TvEmailpwsreset" />

</androidx.constraintlayout.widget.ConstraintLayout>